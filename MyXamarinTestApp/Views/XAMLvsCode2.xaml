             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyXamarinTestApp.Views.XAMLvsCode2">
    <ContentPage.Content>

        <Frame OutlineColor="Accent"
               HorizontalOptions="Center"
               VerticalOptions="Center">

            <Frame.Content>
                <Label Text="Label from XAML"
